#!/usr/bin/env bash
echo "Installing Ghostscript"
GS_VERSION=9.19
GS_TGZ=ghostscript-$GS_VERSION.tar.gz
ENVSCRIPT=$BUILD_DIR/.profile.d/gs.sh
INSTALL_DIR=$BUILD_DIR/vendor/ghostscript
OUTPUT_DIR=$BUILD_DIR/vendor/installed_gs
mkdir -p $INSTALL_DIR
mkdir -p $OUTPUT_DIR
tar -zxvf $ROOT_DIR/$GS_TGZ -C $INSTALL_DIR
cd $INSTALL_DIR/ghostscript-$GS_VERSION
./configure --prefix=$OUTPUT_DIR
make
make install
mkdir -p $BUILD_DIR/.profile.d
echo "export PATH=\"$OUTPUT_DIR/bin:\$PATH\"" > $ENVSCRIPT
echo "export GS_LIB=\"$OUTPUT_DIR/share/ghostscript/9.19/lib\"" >> $ENVSCRIPT
echo "export LD_LIBRARY_PATH=\"$OUTPUT_DIR/share/ghostscript/9.19/lib:\$LD_LIBRARY_PATH\"" >> $ENVSCRIPT
cd /app
echo "Ghostscript installed"