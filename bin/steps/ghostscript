#!/usr/bin/env bash
echo "Installing Ghostscript"
GS_VERSION=9.19
GS_TGZ=gs.tar.gz
INSTALL_DIR=$BUILD_DIR/vendor/ghostscript
OUTPUT_DIR=$BUILD_DIR/vendor/installed_gs
mkdir -p $INSTALL_DIR
mkdir -p $OUTPUT_DIR
tar -zxvf $ROOT_DIR/$GS_TGZ -C $INSTALL_DIR
export PATH=$INSTALL_DIR/gs:$PATH
echo $PATH
export LD_LIBRARY_PATH=$INSTALL_DIR/gs/libs:$LD_LIBRARY_PATH
echo $LD_LIBRARY_PATH
echo "test gs"
gs -h
cd /app
echo "test gs version"
gs --version
echo "Ghostscript installed"