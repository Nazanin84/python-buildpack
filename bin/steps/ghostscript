#!/usr/bin/env bash
echo "Installing Ghostscript"
GS_VERSION=9.19
GS_TGZ=ghostscript-$GS_VERSION.tar.gz
INSTALL_DIR=$BUILD_DIR/vendor/ghostscript
OUTPUT_DIR=$BUILD_DIR/vendor/installed_gs
mkdir -p $INSTALL_DIR
mkdir -p $OUTPUT_DIR
tar -zxvf $ROOT_DIR/$GS_TGZ -C $INSTALL_DIR
pwd
cd $INSTALL_DIR/ghostscript-$GS_VERSION
./configure --prefix=$OUTPUT_DIR
make
make install
echo "Output share dir"
ls $OUTPUT_DIR/share/ghostscript
echo "Output share 9.19 dir"
ls $OUTPUT_DIR/share/ghostscript/9.19
export PATH=$OUTPUT_DIR/bin:$PATH
echo $PATH
export LD_LIBRARYP_PATH=$OUTPUT_DIR/share/ghostscript/9.19/lib:$LD_LIBRARYP_PATH
echo $LD_LIBRARYP_PATH
echo "test gs"
gs -h
cd /app
echo "test gs version"
gs --version
echo "Ghostscript installed"